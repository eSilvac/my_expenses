<div class="container-fluid new-session">
  <div class="row">
    <div class="col-xs-2 col-xs-offset-5 principal">
      <h3 class="text-center">Login to Expensify</h3>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
         <%= f.label :email %><br />
         <%= f.text_field :email, autofocus: true, class:"form-control" %>
        </div>

        <div class="form-group">
         <%= f.label :password %><br />
         <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-success btn-block" %>
        </div>
      <% end %>
      <br>
      <div class="col-xs-12 text-center sign-up">
        <span>New in Expensify?</span>
        <span><%= link_to "Create an account.", new_user_registration_path %></span>
      </div> 
    </div>    
  </div>  
</div>